<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp">
    <natanael.navigation.widget.RoundedImageView
        android:layout_marginLeft="4dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/image_view"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/title_label"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_view"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:id="@+id/summary_label"
        android:layout_below="@+id/title_label"
        android:layout_alignLeft="@+id/title_label"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedroom"
        android:id="@+id/bedroom_label"
        android:layout_below="@+id/summary_label"
        android:layout_alignLeft="@+id/summary_label"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bathroom"
        android:id="@+id/bathroom_label"
        android:layout_below="@+id/bedroom_label"
        android:layout_alignLeft="@+id/bedroom_label"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/price_label"
        android:layout_below="@+id/bathroom_label"
        android:layout_alignLeft="@+id/bathroom_label"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/price_label"
        android:background="#dcdcdc"/>
</RelativeLayout>